{{!< default}}
{{#author}}
<header class="site-head" style="background-image: url({{cover}})">
	<div class="vertical">
		<div role='banner' class="header_typesome">
			{{#if image}}
				<div class="authorimage_typesome" style="background-image: url({{image}})"></div>
            {{/if}}
			<h1 class="blogtitle_typesome"><span itemprop="author">{{name}}</span></h1>
			<p class="blogdescription_typesome">{{bio}}</p>
            {{#if location}}
				<h5 class="authordata_typesome"><i class="fa fa-map-marker"></i>{{location}}</h5>
            {{/if}}
            {{#if website}}
				<h5 class="authordata_typesome"><i class="fa fa-link"></i><a href="{{website}}">{{website}}</a></h5>
            {{/if}}
                <h5 class="authordata_typesome"><i class="fa fa-file-text"></i>{{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</h5>
		</div>
	</div>
</header>
{{/author}}


<main class="main_typesome" role="main">
    
    <div class="back_typesome">
        <p class="go-back go-home"><a class="fa fa-long-arrow-left" href="{{@blog.url}}"><span>Back to the front page</span></a></p>
    </div>

	{{#foreach posts}}

		<article class="article_typesome">
				
				<header class="postheader_typesome">
					<ul>
						<li><time class="date_typesome">
						{{date format='dddd DD MMM YYYY'}}</time></li>
						{{#if tags}}
						<li class="posttags_typesome">
						{{tags  separator=", "}}
						</li>
						{{/if}}
					</ul>
					
					<h2 class="posttitle_typesome"><a href="{{{url}}}" rel="bookmark">
						{{title}}
					</a></h2>
					
				</header>
			
			<div class="postcontent_typesome">
				<p>{{excerpt}}&hellip;</p>
			</div>
			
			
			<footer class="excerptfooter_typesome" >
				<section class="read_typesome">
					<a class="more_typesome" href="{{{url}}}">Read More</a>
					<span></span> 
					<a class="comments_typesome" href="{{url}}#disqus_thread" data-disqus-identifier="{{id}}">Comments</a>
				</section>
				
				<section class="share_typesome"> 
					<h4>Share: &nbsp;</h4>
					<a class="fa fa-twitter-square" target="_blank" href="http://twitter.com/share?text={{title}}&url={{url absolute="true"}}"><span class="hidden_typesome">Twitter</span></a>
				<a class="fa fa-facebook-square" target="_blank" href="http://www.facebook.com/sharer.php?u={{url absolute="true"}}"><span class="hidden_typesome">Facebook</span></a>
				<a class="fa fa-google-plus-square" target="_blank" href="https://plus.google.com/share?url={{url absolute="true"}}"><span class="hidden_typesome">Google+</span></a>
				</section>
			</footer>
			
		</article>
	
	{{/foreach}}

	{{#if pagination}}
	<div class="pagination_typesome">
		{{{pagination}}}
	</div>
		
	{{/if}}

</main>
{{> footer}}